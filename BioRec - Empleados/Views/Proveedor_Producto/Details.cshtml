@model BioRec___Empleados.Models.Proveedor_Producto

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del inventario</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fecha)
        </dd>
        <dt class = "col-sm-2">
            Cantidad total:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cantidadTotal)
        </dd>
        <dt class = "col-sm-2">
            Costo por unidad:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.costoPorUnidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Producto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Producto.descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Proveedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Proveedor.nombreProveedor)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.idProveedor_Producto">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>
