@model BioRec___Empleados.Models.Proveedor_Producto

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">

    <h1 class="display-1 titulo">Editar un registro de inventario</h1>

</div>
<br />


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            Fecha
            <input asp-for="fecha" class="form-control" />
            <span asp-validation-for="fecha" class="text-danger"></span>
        </div>
        <div class="col-md-3"></div>
    </div>

    <div class="form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            Cantidad total:
            <input asp-for="cantidadTotal" class="form-control" />
            <span asp-validation-for="cantidadTotal" class="text-danger"></span>
        </div>
        <div class="col-md-3"></div>
    </div>

    <div class="form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            Costo por unidad:
            <input asp-for="costoPorUnidad" class="form-control" />
            <span asp-validation-for="costoPorUnidad" class="text-danger"></span>
        </div>
        <div class="col-md-3"></div>
    </div>

    <div class="form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            Seleccione el producto
            <select asp-for="idProducto" class="form-control" asp-items="ViewBag.idProducto"></select>
        </div>
        <div class="col-md-3"></div>
    </div>

    <div class="form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            Seleccione el proveedor
            <select asp-for="idProveedor" class="form-control" asp-items="ViewBag.idProveedor"></select>
        </div>
        <div class="col-md-3"></div>
    </div>

    <br />

    <div class="form-group row">
        <div class="col-12">
            <div class="col text-center">
                <input type="submit" value="Guardar" class="btn btn-info botonPred" style="width: 50%;">
            </div>
        </div>
    </div>

</form>

<form>
    <div class="form-group row">
        <div class="col-12">
            <div class="col text-center">
                <button asp-action="Index" class="btn btn-info botonPred" style="width: 50%;">Atrás</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
