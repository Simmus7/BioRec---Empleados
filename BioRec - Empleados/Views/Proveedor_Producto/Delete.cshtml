@model BioRec___Empleados.Models.Proveedor_Producto

@{
    ViewData["Title"] = "Eliminar producto";
}

<div class="text-center">
    <h1 class="display-1 titulo">Eliminar inventario</h1>
    <h5 class="text-black">¿Está seguro de que desea eliminar este inventario?</h5>
</div>
<hr />



<div class="row">
    <div class="col-3"></div>
    <div class="col">
        <h3>Fecha:</h3>
        <h5 class="text-secondary">@Html.DisplayFor(model => model.fecha)</h5>
    </div>
</div>
<div class="row">
    <div class="col-3"></div>
    <div class="col">
        <h3>Cantidad total:</h3>
        <h5 class="text-secondary">@Html.DisplayFor(model => model.cantidadTotal)</h5>

    </div>
</div>
<div class="row">
    <div class="col-3"></div>
    <div class="col">
        <h3> Costo por unidad:</h3>
        <h5 class="text-secondary"> @Html.DisplayFor(model => model.costoPorUnidad)</h5>


    </div>
</div>
<div class="row">
    <div class="col-3"></div>
    <div class="col">
        <h3> Producto:</h3>
        <h5 class="text-secondary"> @Html.DisplayFor(model => model.Producto.nombre)</h5>


    </div>
</div>
<div class="row">
    <div class="col-3"></div>
    <div class="col">
        <h3> Proveedor:</h3>
        <h5 class="text-secondary"> @Html.DisplayFor(model => model.Proveedor.nombreProveedor)</h5>


    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="idProveedor_Producto" />
    <div class="form-group row">
        <div class="col-3"></div>
        <div class="col-md-6">
            <button class="btn btn-block btn-info botonPred">Eliminar</button>
        </div>
    </div>

</form>

<form>
    <div class="form-group row">
        <div class="col-3"></div>
        <div class="col-md-6">
            <button asp-action="Index" class="btn btn-block btn-info botonPred">Volver a la lista</button>
        </div>
    </div>
</form>
