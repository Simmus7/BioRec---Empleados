@model IEnumerable<BioRec___Empleados.Models.Proveedor_Producto>

@{
    ViewData["Title"] = "Inventario";
}

<h1>Inventario</h1>

<p>
    <a asp-action="Create">Registra un nuevo inventario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Fecha
            </th>
            <th>
                Cantidad total
            </th>
            <th>
                Costo por unidad
            </th>
            <th>
                Producto
            </th>
            <th>
                Proveedor
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidadTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costoPorUnidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedor.nombreProveedor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idProveedor_Producto">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idProveedor_Producto">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.idProveedor_Producto">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
