@model BioRec___Empleados.Models.Producto

@{
    ViewData["Title"] = "Detalles del producto";
}
<div class="text-center">
    <h1 class="display-1 titulo">Detalles</h1>
</div>
<hr />




<div class="row">
    <div class="col-3"></div>
    <div class="col">
        <h3>Nombre:</h3>
        <h5 class="text-secondary">@Html.DisplayFor(model => model.nombre)</h5>
    </div>
</div>
<div class="row">
    <div class="col-3"></div>
    <div class="col">
        <h3>Descripción:</h3>
        <h5 class="text-secondary">@Html.DisplayFor(model => model.descripcion)</h5>

    </div>
</div>
<div class="row">
    <div class="col-3"></div>
    <div class="col">
        <h3> Cantidad Total:</h3>
        <h5 class="text-secondary"> @Html.DisplayFor(model => model.cantidadTotal)</h5>


    </div>
</div>

<form>
    <div class="form-group row">
        <div class="col-3"></div>
        <div class="col-md-6">
            <button asp-action="Edit" asp-route-id="@Model.idProducto" class="btn btn-block btn-info botonPred">Editar producto</button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-3"></div>
        <div class="col-md-6">
            <button asp-action="IndexProducto" class="btn btn-block btn-info botonPred">Volver a la lista</button>
        </div>
    </div>

</form>