@model BioRec___Empleados.ViewModel.RegistroProveedorViewModel

@{
    ViewData["Title"] = "Registro de proveedor";
}

<div class="text-center">

    <h1 class="display-1 titulo">Registra un proveedor</h1>

</div>
<br />
<br />

<form asp-action="RegistrarProveedor">
    <div class="form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <input asp-for="nombreProveedor" type="text" class="form-control" placeholder="Nombre">

        </div>
        <div class="col-md-3"></div>


    </div>

    <div class="form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <input asp-for="telefono" type="text" class="form-control" placeholder="Telefono">

        </div>
        <div class="col-md-3"></div>


    </div>

    <div class="form-group row">
        <div class="col-3"></div>
        <div class="col-6 font-weight-light">Dirección</div>
    </div>

    <div class="form-group row">
        <div class="col-3"></div>
        <div class="col-2">
            <input asp-for="tipoVia" type="text" class="form-control" placeholder="Tipo Vía" />

        </div>
        <div class="col-2">
            <input asp-for="numeroVia" type="text" class="form-control" placeholder="Numero Vía" />

        </div>
        <div>#</div>
        <div class="col-1">
            <input asp-for="numeroViaSecundario" type="text" class="form-control" />

        </div>
        <div>-</div>
        <div class="col-1">
            <input asp-for="numeroCasa" type="text" class="form-control" />


        </div>
    </div>

    <div class="form-group row">
        <div class="col-3"></div>
        <div class="col-4">
            <input asp-for="tipoInmueble" type="text" class="form-control" placeholder="Tipo Inmueble" />

        </div>
        <div class="col-2">
            <input asp-for="numeroInmueble" type="text" class="form-control" placeholder="Número" />

        </div>

    </div>

    <div class="form-group row">
        <div class="col-3"></div>
        <div class="col-2">
            <input asp-for="ciudad" type="text" class="form-control" placeholder="Ciudad">

        </div>
        <div class="col-2">
            <input asp-for="departamento" type="text" class="form-control" placeholder="Departamento">

        </div>
        <div class="col-2">
            <input asp-for="pais" type="text" class="form-control" placeholder="País">

        </div>

    </div>

    <br />
    <br />

    <div class="form-group row">
        <div class="col-12">
            <div class="col text-center">
                <input type="submit" value="Registrar" class="btn btn-info botonPred" style="width: 50%;">
            </div>
        </div>
    </div>
</form>

<form>
    <div class="form-group row">
        <div class="col-12">
            <div class="col text-center">
                <button asp-action="Index" class="btn btn-info botonPred" style="width: 50%;">Atrás</button>
            </div>
        </div>
    </div>
</form>
