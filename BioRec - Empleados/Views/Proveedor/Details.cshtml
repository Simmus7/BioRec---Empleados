@model BioRec___Empleados.Models.Proveedor

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles del proveedor</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombreProveedor)
        </dd>
        <dt class="col-sm-2">
            Dirección:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tipoVia) @Html.DisplayFor(model => model.numeroVia) # @Html.DisplayFor(model => model.numeroViaSecundario) - @Html.DisplayFor(model => model.numeroCasa)
        </dd>

        <dt class="col-sm-2">
            Inmueble:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tipoInmueble) # @Html.DisplayFor(model => model.numeroInmueble)
        </dd>

        <dt class="col-sm-2">
            Ciudad:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CiudadDepPais.ciudad) @Html.DisplayFor(model => model.CiudadDepPais.Departamento.departamento)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.idProveedor">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>